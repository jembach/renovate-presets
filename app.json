{
  "baseBranches": ["next"],
  "timezone": "Europe/Berlin",
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "extends": [
    "config:base",
    "monorepo:expo",
    "monorepo:babel",
    "monorepo:jest",
    "monorepo:lodash",
    "monorepo:sentry",
    "packages:apollographql",
    "packages:eslint",
    "packages:jsUnitTest",
    "schedule:earlyMondays",
    ":prHourlyLimitNone"
  ],
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^npx expo install .+$"],
  "postUpgradeTasks": {
    "commands": [
      "npx expo install {{{depName}}}@^{{{currentVersion}}}",
      "npx yarn-deduplicate --strategy fewer"
    ],
    "fileFilters": ["package.json", "yarn.lock"],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ]
}
