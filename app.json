{
  "baseBranches": ["next"],
  "timezone": "Europe/Berlin",
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "extends": [
    "config:base",
    "monorepo:expo",
    "monorepo:babel",
    "monorepo:jest",
    "monorepo:lodash",
    "monorepo:sentry",
    "packages:apollographql",
    "packages:eslint",
    "packages:jsUnitTest",
    "schedule:earlyMondays",
    ":prHourlyLimitNone"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ]
}
